<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.segurcol.viewcontroller.AgendaViewController">

    <children>
        <!-- Título -->
        <Label layoutX="14.0" layoutY="14.0" text="Agenda y Programación">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <!-- Panel de formulario izquierdo -->
        <VBox layoutX="14.0" layoutY="50.0" prefHeight="200.0" prefWidth="350.0" spacing="15.0"
              style="-fx-border-color: #cccccc; -fx-border-width: 1px; -fx-padding: 15;">

            <!-- Campos del formulario -->
            <Label text="Nuevo Evento:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label prefWidth="100.0" text="Fecha:" />
                <DatePicker fx:id="dpFecha" prefWidth="200.0" />
            </HBox>

            <VBox spacing="5.0">
                <Label text="Descripción:" />
                <TextArea fx:id="txtDescripcion" prefHeight="80.0" prefWidth="320.0"
                          wrapText="true" style="-fx-control-inner-background: #f8f9fa;"/>
            </VBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label prefWidth="100.0" text="Empleado:" />
                <ComboBox fx:id="cbEmpleado" prefWidth="200.0" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label prefWidth="100.0" text="Servicio:" />
                <ComboBox fx:id="cbServicio" prefWidth="200.0" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label prefWidth="100.0" text="Tipo Evento:" />
                <ComboBox fx:id="cbTipoEvento" prefWidth="200.0" />
            </HBox>

            <!-- Botones de acción -->
            <HBox spacing="10.0" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="btnProgramar" onAction="#onProgramarEvento" text="Programar"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="90" />
                <Button fx:id="btnLimpiar" onAction="#onLimpiar" text="Limpiar"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="90" />
                <Button fx:id="btnFiltrar" onAction="#onFiltrar" text="Filtrar"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="90" />
            </HBox>
        </VBox>

        <!-- Panel de tabla derecha -->
        <VBox layoutX="380.0" layoutY="50.0" prefHeight="500.0" prefWidth="400.0"
              style="-fx-border-color: #cccccc; -fx-border-width: 1px; -fx-padding: 15;">

            <Label text="Eventos Programados:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <TableView fx:id="tblAgenda" prefHeight="430.0" prefWidth="370.0"
                       style="-fx-border-color: #bdc3c7; -fx-border-width: 1px;">
                <columns>
                    <TableColumn fx:id="colFecha" prefWidth="80.0" text="Fecha" />
                    <TableColumn fx:id="colDescripcion" prefWidth="120.0" text="Descripción" />
                    <TableColumn fx:id="colEmpleado" prefWidth="80.0" text="Empleado" />
                    <TableColumn fx:id="colServicio" prefWidth="80.0" text="Servicio" />
                    <TableColumn fx:id="colTipoEvento" prefWidth="60.0" text="Tipo" />
                </columns>
            </TableView>
        </VBox>

        <!-- Botón Volver -->
        <Button fx:id="btnVolverMenu" layoutX="14.0" layoutY="560.0"
                onAction="#onVolverMenu" prefWidth="200.0" prefHeight="35.0"
                text="Volver al Menú Principal"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" />
    </children>

    <!-- Estilos CSS internos -->
    <style>
        .root {
        -fx-background-color: #ecf0f1;
        }
        .table-view {
        -fx-border-color: #bdc3c7;
        -fx-border-width: 1px;
        }
        .table-row-cell:even {
        -fx-background-color: #f8f9fa;
        }
        .table-row-cell:odd {
        -fx-background-color: #ffffff;
        }
        .table-row-cell:selected {
        -fx-background-color: #3498db;
        -fx-text-fill: white;
        }
        .text-field, .combo-box, .date-picker, .text-area {
        -fx-border-color: #bdc3c7;
        -fx-border-width: 1px;
        -fx-border-radius: 3px;
        -fx-background-radius: 3px;
        }
        .text-field:focused, .combo-box:focused, .date-picker:focused {
        -fx-border-color: #3498db;
        -fx-border-width: 2px;
        }
        .button {
        -fx-cursor: hand;
        }
    </style>
</AnchorPane>