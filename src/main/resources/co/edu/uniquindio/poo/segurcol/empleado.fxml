<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.segurcol.viewcontroller.EmpleadoViewController">

    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Gestión de Empleados">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <VBox layoutX="14.0" layoutY="50.0" prefHeight="200.0" prefWidth="350.0" spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Documento:" />
                        <TextField fx:id="txtDocumento" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Nombre:" />
                        <TextField fx:id="txtNombre" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Turno:" />
                        <ComboBox fx:id="cbTurno" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Salario Base:" />
                        <TextField fx:id="txtSalarioBase" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="80.0" text="Tipo:" />
                        <ComboBox fx:id="cbTipoEmpleado" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Campos específicos para Vigilante -->
                <HBox spacing="10.0" visible="false" fx:id="boxVigilante">
                    <children>
                        <Label prefWidth="80.0" text="N° Puesto:" />
                        <TextField fx:id="txtNumeroPuesto" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0" visible="false" fx:id="boxVigilante2">
                    <children>
                        <Label prefWidth="80.0" text="Tipo Arma:" />
                        <ComboBox fx:id="cbTipoArma" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Campos específicos para Supervisor -->
                <HBox spacing="10.0" visible="false" fx:id="boxSupervisor">
                    <children>
                        <Label prefWidth="80.0" text="Bono Coord.:" />
                        <TextField fx:id="txtBonoCoordinacion" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Campos específicos para Operador -->
                <HBox spacing="10.0" visible="false" fx:id="boxOperador">
                    <children>
                        <Label prefWidth="80.0" text="N° Zonas:" />
                        <TextField fx:id="txtNumeroZonas" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnAgregar" onAction="#onAgregarEmpleado" text="Agregar" />
                        <Button fx:id="btnActualizar" onAction="#onActualizarEmpleado" text="Actualizar" />
                        <Button fx:id="btnEliminar" onAction="#onEliminarEmpleado" text="Eliminar" />
                        <Button fx:id="btnLimpiar" onAction="#onLimpiar" text="Limpiar" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <TableView fx:id="tblEmpleados" layoutX="380.0" layoutY="50.0" prefHeight="500.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colDocumento" prefWidth="80.0" text="Documento" />
                <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                <TableColumn fx:id="colTurno" prefWidth="60.0" text="Turno" />
                <TableColumn fx:id="colTipo" prefWidth="100.0" text="Tipo" />
                <TableColumn fx:id="colSalario" prefWidth="80.0" text="Salario" />
            </columns>
        </TableView>

        <!-- BOTÓN VOLVER AL MENÚ PRINCIPAL AGREGADO -->
        <Button fx:id="btnVolverMenu" layoutX="14.0" layoutY="550.0"
                onAction="#onVolverMenu" prefWidth="200.0" prefHeight="30.0"
                text="Volver al Menú Principal"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
    </children>
</AnchorPane>