<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.segurcol.viewcontroller.EquipoViewController">

    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Gestión de Equipos">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <VBox layoutX="14.0" layoutY="50.0" prefHeight="200.0" prefWidth="350.0" spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="100.0" text="Código:" />
                        <TextField fx:id="txtCodigo" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="100.0" text="Tipo:" />
                        <ComboBox fx:id="cbTipo" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="100.0" text="Estado:" />
                        <ComboBox fx:id="cbEstado" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="100.0" text="Valor Reposición:" />
                        <TextField fx:id="txtValorReposicion" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Label prefWidth="100.0" text="Asignar a:" />
                        <ComboBox fx:id="cbEmpleadoAsignar" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnAgregar" onAction="#onAgregarEquipo" text="Agregar" />
                        <Button fx:id="btnAsignar" onAction="#onAsignarEquipo" text="Asignar" />
                        <Button fx:id="btnRetirar" onAction="#onRetirarEquipo" text="Retirar" />
                        <Button fx:id="btnLimpiar" onAction="#onLimpiar" text="Limpiar" />
                        <Button fx:id="btnGenerarInforme" onAction="#onGenerarInforme" text="Informe" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <TableView fx:id="tblEquipos" layoutX="380.0" layoutY="50.0" prefHeight="500.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colCodigo" prefWidth="80.0" text="Código" />
                <TableColumn fx:id="colTipo" prefWidth="100.0" text="Tipo" />
                <TableColumn fx:id="colEstado" prefWidth="80.0" text="Estado" />
                <TableColumn fx:id="colValor" prefWidth="80.0" text="Valor" />
                <TableColumn fx:id="colAsignadoA" prefWidth="120.0" text="Asignado a" />
            </columns>
        </TableView>

        <!-- BOTÓN VOLVER AL MENÚ PRINCIPAL AGREGADO -->
        <Button fx:id="btnVolverMenu" layoutX="14.0" layoutY="550.0"
                onAction="#onVolverMenu" prefWidth="200.0" prefHeight="30.0"
                text="Volver al Menú Principal"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
    </children>
</AnchorPane>